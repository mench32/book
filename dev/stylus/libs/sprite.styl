/*
Stylus variables are information about icon's compiled state, stored under its original file name

.icon-home {
  width: $icon_home_width;
}

The large array-like variables contain all information about a single icon
$icon_home = x y offset_x offset_y width height total_width total_height image_path;

At the bottom of this section, we provide information about the spritesheet itself
$spritesheet = width height image $spritesheet_sprites;
*/
$s_cloud_name = 's-cloud';
$s_cloud_x = 0px;
$s_cloud_y = 0px;
$s_cloud_offset_x = 0px;
$s_cloud_offset_y = 0px;
$s_cloud_width = 64px;
$s_cloud_height = 64px;
$s_cloud_total_width = 128px;
$s_cloud_total_height = 128px;
$s_cloud_image = '../img/sprite.png';
$s_cloud = 0px 0px 0px 0px 64px 64px 128px 128px '../img/sprite.png' 's-cloud';
$s_rain_name = 's-rain';
$s_rain_x = 64px;
$s_rain_y = 0px;
$s_rain_offset_x = -64px;
$s_rain_offset_y = 0px;
$s_rain_width = 64px;
$s_rain_height = 64px;
$s_rain_total_width = 128px;
$s_rain_total_height = 128px;
$s_rain_image = '../img/sprite.png';
$s_rain = 64px 0px -64px 0px 64px 64px 128px 128px '../img/sprite.png' 's-rain';
$s_sunny_name = 's-sunny';
$s_sunny_x = 0px;
$s_sunny_y = 64px;
$s_sunny_offset_x = 0px;
$s_sunny_offset_y = -64px;
$s_sunny_width = 64px;
$s_sunny_height = 64px;
